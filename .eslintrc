{
  "rules": {
    "indent": [
      2,
      2,
      {"SwitchCase": 1}
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-console": [
      0
    ],
    "no-multiple-empty-lines": [
      2,
      {"max": 1}
    ],
    "semi": [
      2,
      "always"
    ],
    "semi-spacing": [
      1,
      {"before": false, "after": true}
    ],
    "keyword-spacing": 2,
    "space-before-blocks": 2,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-duplicate-imports": 2,
    "yoda": 2,
    "no-useless-constructor": 2,
    "curly": ["error", "all"],
    "no-multi-spaces": 2,
    "space-infix-ops": 2,
    "eol-last": 2,
    "no-trailing-spaces": 2,
    "object-curly-spacing": ["error", "always"]
  },
  "env": {
    "es6": true,
    "browser": false,
    "jasmine": true,
    "commonjs": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false,
      "experimentalObjectRestSpread": false,
      "arrowFunctions": true,
      "modules": true
    }
  },
  "plugins": [],
  "globals": {
    "chai": true
  },
  "settings": {}
}
